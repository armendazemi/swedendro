<div class="container spacing-3 flex-col navbar-desktop" id="mobile-nav-wrapper">
  <div class="top-navbar d-flex justify-content-between align-items-center spacing-lg hidden-mobile">
    <a href="/{% if locale != 'sv' %}{{ locale }}{% endif %}"><img src="{{ 'swedendro-logo.png' | asset_path }}"
                                                                   height="32" width="191" alt="{{ site.name }}"/></a>
    <form accept-charset="UTF-8" action="/{{ locale }}/catalog/products"
          class="search-wrapper d-flex align-items-center w-100" style="max-width: 660px">
      <svg class="search-icon" xmlns="http://www.w3.org/2000/svg" width="21" height="20" viewBox="0 0 21 20"
           fill="none">
        <path
          d="M18 17.5L14.375 13.875M16.3333 9.16667C16.3333 12.8486 13.3486 15.8333 9.66667 15.8333C5.98477 15.8333 3 12.8486 3 9.16667C3 5.48477 5.98477 2.5 9.66667 2.5C13.3486 2.5 16.3333 5.48477 16.3333 9.16667Z"
          stroke="#344054" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      <input type="text" name="search" class="w-100 search" placeholder="{{ 'Vad sÃ¶ker du efter?' | t }}"/>
    </form>
    <div class="navbar-icons d-flex justify-content-between align-items-center spacing-md">
      {% if customer.logged_in? %}
        <a href="{{ customer.profile_url }}" class="btn-tertiary-gray-lg">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path
              d="M2.5 16.6667C4.44649 14.6021 7.08918 13.3333 10 13.3333C12.9108 13.3333 15.5535 14.6021 17.5 16.6667M13.75 6.25C13.75 8.32107 12.0711 10 10 10C7.92893 10 6.25 8.32107 6.25 6.25C6.25 4.17893 7.92893 2.5 10 2.5C12.0711 2.5 13.75 4.17893 13.75 6.25Z"
              stroke="#101828" stroke-width="1.66667" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          {{ 'Profil/logga ut' | t }}
        </a>
      {% else %}
        <a href="{{ customer.login_url }}" class="btn-tertiary-gray-lg">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path
              d="M2.5 16.6667C4.44649 14.6021 7.08918 13.3333 10 13.3333C12.9108 13.3333 15.5535 14.6021 17.5 16.6667M13.75 6.25C13.75 8.32107 12.0711 10 10 10C7.92893 10 6.25 8.32107 6.25 6.25C6.25 4.17893 7.92893 2.5 10 2.5C12.0711 2.5 13.75 4.17893 13.75 6.25Z"
              stroke="#101828" stroke-width="1.66667" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          {{ 'Logga in/registrera dig' | t }}
        </a>
      {% endif %}
      <button class="btn-tertiary-lg"><a href="{{ cart.url }}">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
            <g clip-path="url(#clip0_8502_39247)">
              <path
                d="M1.6665 1.66669H2.75497C2.95999 1.66669 3.0625 1.66669 3.14499 1.70439C3.21769 1.73761 3.27929 1.79104 3.32246 1.85831C3.37145 1.93464 3.38595 2.03612 3.41494 2.23907L3.80936 5.00002M3.80936 5.00002L4.68594 11.4429C4.79718 12.2605 4.85279 12.6693 5.04825 12.977C5.22049 13.2481 5.46741 13.4637 5.7593 13.5978C6.09056 13.75 6.50312 13.75 7.32826 13.75H14.4598C15.2453 13.75 15.638 13.75 15.959 13.6087C16.242 13.4841 16.4847 13.2832 16.6601 13.0285C16.8589 12.7397 16.9324 12.3539 17.0794 11.5823L18.1824 5.79143C18.2342 5.51986 18.26 5.38408 18.2225 5.27794C18.1897 5.18483 18.1248 5.10642 18.0395 5.0567C17.9422 5.00002 17.804 5.00002 17.5275 5.00002H3.80936ZM8.33317 17.5C8.33317 17.9603 7.96007 18.3334 7.49984 18.3334C7.0396 18.3334 6.6665 17.9603 6.6665 17.5C6.6665 17.0398 7.0396 16.6667 7.49984 16.6667C7.96007 16.6667 8.33317 17.0398 8.33317 17.5ZM14.9998 17.5C14.9998 17.9603 14.6267 18.3334 14.1665 18.3334C13.7063 18.3334 13.3332 17.9603 13.3332 17.5C13.3332 17.0398 13.7063 16.6667 14.1665 16.6667C14.6267 16.6667 14.9998 17.0398 14.9998 17.5Z"
                stroke="white" stroke-width="1.66667" stroke-linecap="round" stroke-linejoin="round"/>
            </g>
            <defs>
              <clipPath id="clip0_8502_39247">
                <rect width="20" height="20" fill="white"/>
              </clipPath>
            </defs>
          </svg>
          {{ 'Varukorg' | t }}
          ({{ cart.item_count | fallback: 0 }})
        </a>
      </button>
    </div>
  </div>
  {% comment %}NAV WILL BE FECTHED WITH A GET FROM STARTPAGE "/?get=nav" and appended here{% endcomment%}

  <ul class="desktop-menu">
    <li>
      <a href="{{ groups.sortiment.url }}" class="subtitle2 d-flex align-items-center text-md-semibold">
        {{ groups.sortiment.name }}
        <span class="material-symbols-outlined hidden-mobile">expand_more</span>
      </a>
    </li>
    {% for category in groups.all %}
      {% assign topmeny_tag_exist = category.tags | select: 'name', 'topmeny' %}
      {% if topmeny_tag_exist.size > 0 %}
        {% if category.visible? %}
          <li class="desktop-menu-item hidden-mobile">
            <a href="{{ category.url }}"
               class="subtitle2 d-flex align-items-center text-md-semibold">{{ category.name }}{% if category.children.size > 0 %}
                <span class="material-symbols-outlined">expand_more</span>{% endif %}</a>
          </li>
        {% endif %}
      {% endif %}
    {% endfor %}


  </ul>
</div>

<div class="search-result search-result--desktop d-flex ">
  <div class="col-xl-3 search-result__categories">
    <h4>{{ "Kategorier" | t }}</h4>
    <div class="categories d-flex flex-column">

    </div>
  </div>
  <div class="col-xl-9 search-result__products">
    <h4>{{ 'Produkter' | t }}</h4>
    <div class="products d-flex flex-wrap"></div>

    <form action="/{{ locale }}/catalog/products" method="get" class="search-form d-none justify-content-center mt-3">
      <input type="text" name="search" hidden="true" class="search-form-input">
      <button class="btn-primary-lg w-100" type="submit">{{ "Visa fler produkter" | t }}</button>
    </form>
  </div>
</div>


